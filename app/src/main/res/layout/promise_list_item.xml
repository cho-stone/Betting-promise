<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:onClick="btn_promiseClicked"
    android:background="@drawable/clickable_layout"
    android:orientation="vertical"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/tv_promiseKey"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:text="약속키"
        android:background="?android:attr/dividerVertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_promiseName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="약속 이름"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="@font/kingsejong"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tv_numOfPlayer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="약속 인원 수"
                android:textSize="15sp"
                android:fontFamily="@font/kingsejong"
                android:textColor="#66000000"/>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="5dp"
                    android:text="총 배팅 금액"
                    android:textSize="13sp"
                    android:fontFamily="@font/kingsejong"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/tv_bettingMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="배팅 총 금액"
                    android:textSize="13sp"
                    android:fontFamily="@font/kingsejong"
                    android:textColor="@color/black"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>