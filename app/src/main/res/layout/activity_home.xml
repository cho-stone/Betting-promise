<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <!--상단 리니어레이아웃-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">

        <!--포인트 출력 텍스트뷰-->
        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="1000000"
            android:textAlignment="center"
            android:textSize="20sp" />

        <!--포인트 충전소 이동 이미지 버튼-->
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:onClick="btnCoinsClicked"
            android:scaleType="fitCenter"
            android:src="@drawable/coins_icon" />

        <!--약속 생성 이미지 버튼-->
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:onClick="btnCreateClicked"
            android:scaleType="fitCenter"
            android:src="@drawable/plus_icon" />

        <!--친구 찾기 이미지 버튼-->
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:onClick="btnSearchFriendClicked"
            android:scaleType="fitCenter"
            android:src="@drawable/search_icon"
            android:id="@+id/search_friend_btn"/>

        <!--전적 검색 이미지 버튼-->
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:onClick="btnSearchHistoryClicked"
            android:scaleType="fitCenter"
            android:src="@drawable/trophy_icon"
            android:id="@+id/search_history_btn"/>

        <!--설정 이미지 버튼-->
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:onClick="btnSettingsClicked"
            android:scaleType="fitCenter"
            android:src="@drawable/settings_icon" />

    </LinearLayout>

    <!--스크롤 뷰와 상단 리니어 레이아웃 경계선-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="4dip"
        android:layout_marginRight="4dip"
        android:background="?android:attr/dividerVertical" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/userRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <LinearLayout
        android:id="@+id/layoutBottomButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <!--스크롤 뷰와 하단 리니어 레이아웃 경계선-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="4dip"
            android:layout_marginRight="4dip"
            android:background="?android:attr/dividerVertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--친구 목록 보기 버튼-->
            <Button
                android:id="@+id/btnCall"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:text="친구"
                android:textColor="@color/black" />

            <View
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:background="?android:attr/dividerVertical" />
            <!--약속 목록 보기 버튼-->
            <Button
                android:id="@+id/btnMessage"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:text="약속"
                android:textColor="@color/black" />
            <!-- @android:string/cancel -->
        </LinearLayout>
    </LinearLayout>
</LinearLayout>